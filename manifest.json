{
  "name": "My Dyslexic Reader",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Changes text to be dyslexic friendly",
  "permissions": ["storage", "activeTab"], 
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "Logo16.png",
      "48": "Logo48.png",
      "128": "Logo128.png"
    },
    "default_title": "My Dyslexic Reader",
    "default_popup": "popup.html"
  }
}
